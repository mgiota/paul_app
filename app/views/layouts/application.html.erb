    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
  </head>

  <body>

    <!--Navigation-->
    <header class="container-full">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark container" role="navigation">
        <a class="navbar-brand" href="#start">Vintage Furniture</a>
        <div class="burger">
          <button class="hamburger">&#9776;</button>
        </div>
        <!-- Collapse Navigation-->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item table-link">
              <%= link_to "Tables", simple_pages_tables_path, class: "nav-link" %>
            </li>
            <li class="nav-item chairs-link">
              <%= link_to "Chairs", simple_pages_chairs_path, class: "nav-link" %>
            </li>
            <li class="nav-item lamps-link">
              <%= link_to "Lamps", simple_pages_lamps_path, class: "nav-link" %>
            </li>
            <li class="nav-item contact-link">
              <%= link_to "Contact", simple_pages_contact_path, class: "nav-link" %>
            </li>
            <li class="nav-item about-link">
              <%= link_to "About", simple_pages_about_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <a href="#"><i class="fas fa-search"></i></a>
            </li>
            <li class="nav-item">
              <a href="#"><i class="fas fa-shopping-cart"></i></a>
            </li>
          </ul>
        </div> <!-- collapse close -->
      </nav> <!-- end nav container -->

      <!-- Dropdown Nav -->
      <div class="dropdown-nav">
        <div class="links">
            <div class="links-col1 table-col">
